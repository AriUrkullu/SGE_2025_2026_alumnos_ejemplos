@page "/colorCounter"

<PageTitle>Counter</PageTitle>

<div style="text-align:center">
    <h1>Counter</h1>
    <p style="color:@micolor ;font-size:50px"> @currentCount</p>
    <button class="btn btn-outline-dark" @onclick="DecreaseCount">Decrease</button>
    <button class="btn btn-outline-dark" @onclick="ResetCount">Reset</button>
    <button class="btn btn-outline-dark" @onclick="IncrementCount">Increase</button>
</div>

@code {
    private int currentCount = 0;
    private string micolor = "black";

    private void IncrementCount()
    {
        currentCount++;
        ValidateColor();
    }
    private void DecreaseCount()
    {
        currentCount--;
        ValidateColor();
    }
    private void ResetCount()
    {
        currentCount = 0;
        ValidateColor();
    }

    private void ValidateColor()
    {
        /*if (currentCount < 0)
        {
            micolor = "red";
        }
        else if (currentCount > 0)
        {
            micolor = "green";
        }
        else
        {
            micolor = "black";
        }*/
        switch (currentCount)
        {
            case < 0:
                micolor = "red";
                break;
            case > 0:
                micolor = "green";
                break;
            default:
                micolor = "black";
                break;
        }

    }
}

